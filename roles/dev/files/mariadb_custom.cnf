# ArchDev 3.0 - MariaDB Custom Configuration
# Otimizado para desenvolvimento com recursos modernos (64GB RAM + NVMe)
# Este arquivo é incluído após as configurações padrão do MariaDB

[mysqld]
# Buffer Pool - Usar ~70% da RAM disponível (ajustar conforme necessário)
innodb_buffer_pool_size = 4G
innodb_buffer_pool_instances = 4

# Log files
innodb_log_file_size = 512M
innodb_log_buffer_size = 64M

# I/O Otimizado para NVMe
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 2
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# Conexões
max_connections = 200
thread_cache_size = 16

# Query Cache (desativado no MariaDB 10.1+, usar Query Cache ou Redis)
query_cache_type = 0
query_cache_size = 0

# Temp Tables
tmp_table_size = 256M
max_heap_table_size = 256M

# Logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Segurança Básica
local_infile = 0
skip-symbolic-links

# Performance Schema
performance_schema = ON

# Charset UTF-8
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4
