
########################################################################################
# CONFIGURAÇÃO HYPRLAND - ARCH DEV (AUTO-DETECT GPU)
# --------------------------------------------------------------------------------------
# Gerado automaticamente via Ansible - GPU detectada: {{ gpu_vendor | upper }}
########################################################################################

#
# Lista completa de opções: https://wiki.hyprland.org/Configuring/Variables/
#

# --- MONITORES ---
monitor=,preferred,auto,1


# --- ARRANQUE AUTOMÁTICO (EXEC ONCE) ---
exec-once = waybar
exec-once = swww init
exec-once = dunst
exec-once = dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec-once = udiskie &
exec-once = sleep 1; swww img ~/.config/wallpapers/wallpaper.png --transition-type grow --transition-pos 0.9,0.9
exec-once = wl-paste --watch cliphist store
exec-once = network-manager-applet & nm-applet --indicator
exec-once = /usr/lib/polkit-kde-authentication-agent-1
exec-once = hypridle
# Night Mode Dinâmico (Filtro de luz azul adaptativo à hora de Lisboa: 38.7,-9.1)
exec-once = wlsunset -l 38.7 -L -9.1 &
# Nota: O Night Mode pode ser forçado/desligado com Super+Shift+N
exec-once = numlockx on  # Ativar NumLock no arranque

# --- DEFINIÇÃO DE PROGRAMAS ---
$terminal = kitty
$fileManager = thunar
$menu = rofi -show drun
$ide = antigravity

# --- VARIÁVEIS DE AMBIENTE ---
# Cursor
env = XCURSOR_SIZE,24
env = XCURSOR_THEME,Catppuccin-Mocha-Dark-Cursors

# Temas Qt
env = QT_QPA_PLATFORMTHEME,qt6ct
env = QT_STYLE_OVERRIDE,kvantum

{% if gpu_vendor == 'amd' %}
# Otimizações AMD (Radeon)
env = LIBVA_DRIVER_NAME,radeonsi
env = VDPAU_DRIVER,radeonsi
env = GBM_BACKEND,drm
env = __GLX_VENDOR_LIBRARY_NAME,mesa
{% elif gpu_vendor == 'intel' %}
# Otimizações Intel
env = LIBVA_DRIVER_NAME,i965
env = GBM_BACKEND,drm
{% elif gpu_vendor == 'nvidia' %}
# Otimizações NVIDIA (Wayland experimental)
env = LIBVA_DRIVER_NAME,nvidia
env = XDG_SESSION_TYPE,wayland
env = GBM_BACKEND,nvidia-drm
env = __GLX_VENDOR_LIBRARY_NAME,nvidia
env = WLR_NO_HARDWARE_CURSORS,1
{% else %}
# GPU Genérica/Desconhecida - Usar defaults seguros
env = GBM_BACKEND,drm
{% endif %}

# Correções Wayland (cursor)
env = WLR_NO_HARDWARE_CURSORS,1

# --- INPUT (TECLADO & RATO) ---
input {
    kb_layout = {{ keyboard_layout | default('pt') }}
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =

    follow_mouse = 1
    sensitivity = 0
}

# --- APARÊNCIA GERAL ---
general {
    gaps_in = 3
    gaps_out = 3
    border_size = 2
    
    col.active_border = rgba(cba6f7ee) rgba(89b4faee) 45deg
    col.inactive_border = rgba(585b70aa)

    layout = dwindle
    allow_tearing = false
}

# --- DECORAÇÃO ---
decoration {
    rounding = 8

    blur {
        enabled = true
        size = 6
        passes = 3
    }
}

# --- ANIMAÇÕES ---
animations {
    enabled = yes

    bezier = fluent_decel, 0, 0.2, 0.4, 1
    bezier = easeOutQuint, 0.23, 1, 0.32, 1
    bezier = easeInOutCubic, 0.65, 0.05, 0.36, 1

    animation = windows, 1, 3, fluent_decel, popin 60%
    animation = windowsIn, 1, 3, easeOutQuint, popin 60%
    animation = windowsOut, 1, 3, easeInOutCubic, popin 60%
    animation = border, 1, 10, default
    animation = borderangle, 1, 100, default, loop
    animation = fade, 1, 3, default
    animation = workspaces, 1, 4, easeOutQuint, slide
}

# --- LAYOUTS ---
dwindle {
    pseudotile = yes
    preserve_split = yes
}

master {
    new_status = master
}

misc {
    force_default_wallpaper = 0 
    disable_hyprland_logo = true
}

# --- REGRAS DE JANELA ---
windowrule {
    name = suppress-maximize-events
    match:class = .*
    suppress_event = maximize
}

windowrule {
    name = blueman
    match:class = ^(blueman-manager)$
    float = yes
    size = 700 400
}

windowrule {
    name = pavucontro
    match:class = ^(org.pulseaudio.pavucontrol)$
    float = yes
    size = 700 400
}

windowrule {
    name = thunar
    match:class = ^(thunar)$
    float = yes
    size = 900 500
}

windowrule {
    name = confirm-thunar
    match:title = ^(Confirm to replace files)$
    float = yes
    size = 600 400
}

windowrule {
    name = operation-thunar
    match:title = ^(File Operation Progress)$
    float = yes
    size = 600 400
}

# --- ATALHOS DE TECLADO ---
$mainMod = SUPER

# Screenshots
bind = , Print, exec, grim -g "$(slurp)" - | swappy -f -
bind = SHIFT, Print, exec, grim - | swappy -f -
bind = CONTROL, Print, exec, grim -g "$(slurp)" - | wl-copy && dunstify "Screenshot" "Copiado para clipboard"

# Sistema
bind = $mainMod, O, exec, wlogout
bind = $mainMod, Escape, exec, hyprlock
bind = $mainMod SHIFT, N, exec, ~/.config/hypr/scripts/night-mode.sh

# Aplicações
bind = $mainMod, Return, exec, $terminal
bind = $mainMod, B, exec, firefox
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, R, exec, $menu
bind = $mainMod, A, exec, $ide
bind = $mainMod, P, exec, rofi-rbw
bind = $mainMod SHIFT, E, exec, rofi -show emoji
bind = $mainMod SHIFT, C, exec, rofi -show calc
bind = $mainMod, F, fullscreen
bind = $mainMod, Q, killactive
bind = $mainMod, X, exit

# Gestão de Janelas
bind = $mainMod, V, exec, ~/.config/hypr/scripts/clipboard-manager.sh
bind = $mainMod SHIFT, V, togglefloating
bind = $mainMod SHIFT, P, pseudo
bind = $mainMod, J, togglesplit

# Focar Janelas
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

# Workspaces
bind = $mainMod, Tab, workspace, previous
bind = $mainMod CONTROL, right, workspace, +1
bind = $mainMod CONTROL, left, workspace, -1
bind = $mainMod CONTROL, L, workspace, +1
bind = $mainMod CONTROL, H, workspace, -1

bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Mover Janelas
bind = $mainMod SHIFT, right, movetoworkspace, +1
bind = $mainMod SHIFT, left, movetoworkspace, -1
bind = $mainMod SHIFT, L, movetoworkspace, +1
bind = $mainMod SHIFT, H, movetoworkspace, -1

bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Scratchpad
bind = $mainMod, S, togglespecialworkspace, magic
bind = $mainMod SHIFT, S, movetoworkspace, special:magic

# Rato
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Media
bindel=, XF86AudioRaiseVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindel=, XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindl=, XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
